{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "declarationMap": true,
    "lib": ["ESNext"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
